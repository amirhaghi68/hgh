<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_screen_background"
        android:scaleType="centerCrop"
        android:foreground="#96222f3e"
        android:foregroundTintMode="src_atop"/>

    <ImageView
        android:id="@+id/ic_launcher"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_logo" />

    <TextView
        android:id="@+id/tv_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_launcher"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Recipes"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_launcher"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ubuntu_regular"
        android:text="your Cooking Friend"
        android:textColor="@color/white"
        android:textSize="20sp"/>


</RelativeLayout>